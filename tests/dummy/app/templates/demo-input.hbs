<h3>Send model with the action hook</h3>
<h4>Users:</h4>
<div class="row">
  <div class="col-lg-6 col-md-6 col-sm-6">
    <ul>
      {{#each users as |user|}}
        <li>
          {{ember-inplace-edit
            text=user.name
            value=user.name
            model=user
            placeholder="User name"
            action="updateUser"
            editIcon="hidden"
          }}
        </li>
      {{/each}}
    </ul>
  </div>
  <div class="col-lg-6 col-md-6 col-sm-6">
    <h4>Controller action</h4>
{{#code-block language='js'}}updateUser(model, newValue) {
  console.log('User updated: ', model);
  console.log('New value: ', newValue);
}{{/code-block}}
    <h4>Handlebars template</h4>
{{#code-block language='handlebars'}}&lt;ul&gt;
  \{{#each users as |user|}}
    &lt;li&gt;
      \{{ember-inplace-edit
        text=user.name
        value=user.name
        model=user
        placeholder="User name"
        action="updateUser"
        editIcon="hidden"
      }}
    &lt;/li&gt;
  \{{/each}}
&lt;ul&gt;{{/code-block}}
  </div>
</div>
