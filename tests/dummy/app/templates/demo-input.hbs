<h3>Handle activated event</h3>
<div class="row">
  <div class="col-lg-6 col-md-6 col-sm-6">
    {{ember-inplace-edit
      text=sampleText1
      value=sampleText1
      placeholder="Add Placeholder content"
      placeholderClass="placeholder div class"
      editIcon="hidden"
      on-activated="inputActivated"
    }}
  </div>
  <div class="col-lg-6 col-md-6 col-sm-6">
    <h4>Controller action</h4>
{{#code-block language='js'}}inputActivated($container) {
  $container.addClass('activated');
}{{/code-block}}
    <h4>Handlebars template</h4>
{{#code-block language='handlebars'}}\{{ember-inplace-edit
  text=sampleText1
  value=sampleText1
  placeholder="Add Placeholder content"
  placeholderClass="placeholder div class"
  editIcon="hidden"
  on-activated="inputActivated"
}}{{/code-block}}
  </div>
</div>


